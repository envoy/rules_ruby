rb_test(
    name = "rubocop",
    size = "small",
    timeout = "moderate",  # JRuby startup can be slow
    data = [".rubocop.yml"],
    main = "@bundle//:bin/rubocop",
    tags = ["no-sandbox"],
    deps = [
        "//lib:gem",
        "//spec:add",
